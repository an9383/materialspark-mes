	<!-- 고객불만 목록 조회 -->
	<select id="custCmplnAdmList" resultMap="custCmplnAdmVo"> 
	<![CDATA[
		SELECT
			CUST_NO
			, CMPLN_DATE
			, RCV_CHARGR
			, ITEM_CD
			, ITEM_REV
			, MFC_DATE
			, CUST_NM
			, CO_CHARGR
			, CO_CHARGR_MAIL
			, FAULTY_CHECK_FN
			, COMPL_REQ_DATE
			, CUST_CONFIRM_CONT
			, CUST_REQ_CONT
			, REG_ID
			, REG_DATE
			, UPD_ID
			, UPD_DATE
			
		FROM TB_CUST_CMPLN_ADM
		
		WHERE 1=1
		]]>
		<if test="custNo!=null">
		<![CDATA[
			AND CUST_NO = #{custNo}
		]]>
		</if>
		<!-- 날짜검색 -->
		<if test="startDate != null and endDate != null">
		<![CDATA[
			AND CMPLN_DATE BETWEEN #{startDate} AND #{endDate}
		]]>
		</if>
		<!--AND REG_DATE BETWEEN #{startDate} AND #{endDate}-->
	</select>
	
